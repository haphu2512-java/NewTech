# Environment Variables Template for Zalo Clone
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to version control!

# ========================================
# AWS Configuration
# ========================================

# AWS Region
AWS_REGION=us-east-1

# AWS Credentials (for development only)
# For production, use IAM roles instead
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# DynamoDB Configuration
# For local development: http://localhost:8000
# For AWS cloud: leave empty
DYNAMODB_ENDPOINT=

# S3 Configuration
# For local development (MinIO): http://localhost:9000
# For AWS cloud: leave empty
S3_ENDPOINT=
S3_BUCKET_NAME=zalo-media-bucket

# ========================================
# Database Configuration
# ========================================

# MariaDB
MARIADB_HOST=localhost
MARIADB_PORT=3306
MARIADB_DATABASE=zalo_users
MARIADB_USERNAME=root
MARIADB_PASSWORD=password

# MongoDB
MONGODB_URI=mongodb://admin:password@localhost:27017/zalo_messages?authSource=admin

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# PostgreSQL (for analytics)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DATABASE=zalo_analytics
POSTGRES_USERNAME=postgres
POSTGRES_PASSWORD=password

# ========================================
# Message Broker Configuration
# ========================================

# Kafka
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# ========================================
# Application Configuration
# ========================================

# Primary Database Selection
# Options: mariadb, dynamodb
DATABASE_PRIMARY=mariadb

# Application Ports
USER_SERVICE_PORT=8080
FRIEND_SERVICE_PORT=8081
GROUP_SERVICE_PORT=8082
MESSAGE_SERVICE_PORT=8083
MEDIA_SERVICE_PORT=8084
NOTIFICATION_SERVICE_PORT=8085
CHATBOT_SERVICE_PORT=8086
ANALYTICS_SERVICE_PORT=8087
PRESENCE_SERVICE_PORT=8088
SEARCH_SERVICE_PORT=8089

# ========================================
# Security Configuration
# ========================================

# JWT Secret Key (generate a strong random key)
JWT_SECRET_KEY=your-very-secret-key-change-this-in-production
JWT_EXPIRATION_MS=86400000

# Encryption Keys
ENCRYPTION_KEY=your-encryption-key-here
ENCRYPTION_SALT=your-encryption-salt-here

# ========================================
# External Services
# ========================================

# Firebase Cloud Messaging
FCM_SERVER_KEY=your-fcm-server-key

# Email Service (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@zaloclone.com

# SMS Service (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ========================================
# Monitoring & Logging
# ========================================

# CloudWatch
CLOUDWATCH_LOG_GROUP=/aws/zalo-clone
CLOUDWATCH_LOG_STREAM=user-service

# Application Insights / Monitoring
MONITORING_ENABLED=true
LOGGING_LEVEL=DEBUG

# ========================================
# Feature Flags
# ========================================

# Enable/Disable features
FEATURE_DYNAMODB_ENABLED=true
FEATURE_S3_ENABLED=true
FEATURE_CHATBOT_ENABLED=true
FEATURE_ANALYTICS_ENABLED=true
FEATURE_ELASTICSEARCH_ENABLED=false

# ========================================
# Development/Production Mode
# ========================================

# Environment: development, staging, production
ENVIRONMENT=development

# Enable debug mode
DEBUG_MODE=true

# ========================================
# Local Development (Docker)
# ========================================

# Use when running services in Docker
# Override hostnames to use container names
MARIADB_HOST_DOCKER=mariadb
MONGODB_HOST_DOCKER=mongodb
REDIS_HOST_DOCKER=redis
KAFKA_HOST_DOCKER=kafka
DYNAMODB_ENDPOINT_DOCKER=http://dynamodb-local:8000
S3_ENDPOINT_DOCKER=http://minio:9000
